{
    "manifest_version": 2,
    
    "name": "AD CLEANER",
    "description": "This program is a chrome extension that cleans up unwanted ad tags.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "./image/cleaner.png",
        "default_popup": "./view/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["./src/js/contentscript.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "<all_urls>"
    ]
}